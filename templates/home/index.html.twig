    <div class="container mt-5">
        {% for post in pagination %}
            <div class="rounded bg-light row">
                <div class="col-md-8">
                <h2 class="text-center">{{post.titulo}}</h2>
                <strong>Creado por:{{post.nombre}}</strong><br />
                <small>Fecha de publicaci√≥n:{{ post.fecha_publicacion | date }}</small>
                <p>
